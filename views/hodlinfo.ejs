<html>

<title>Hodlinfo | ₹ 24,80,855</title>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
    <nav>
        <div class="navbar">
            <h1 id="logo"><a href="/">HODLINFO<span></span></a></h1>
            <div class="btn">

                <button type="button" aria-haspopup="true" aria-expanded="false"
                    class="header-button dropdown-toggle btn btn-secondary color2E3241 ">INR</button>
                <button type="button" aria-haspopup="true" aria-expanded="false"
                    class="header-button dropdown-toggle btn btn-secondary color2E3241 m-3">BTC</button>
                <button type="button" aria-haspopup="true" aria-expanded="false"
                    class="header-button dropdown-toggle btn btn-secondary color2E3241">BUY BTC</button>

            </div>

            <div class="d-inline-flex flex-wrap align-items-center justify-content-center"
                style="margin-left: 200px;margin-right: 0px;">
                <div class="progress-bar-wrapper me-5 ">
                    <section class="m-0">
                        <div class="circle-wrap">
                            <div class="circle">
                                <div class="mask full">
                                    <div class="fill"></div>
                                </div>
                                <div class="mask half">
                                    <div class="fill"></div>
                                </div>
                                <div class="inside-circle"> 70% </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="me-5 ">
                    <a class="color-white" href="/connect/telegram">
                        <div class="d-flex btn bg-info">
                            <div class="text-nowrap d-inline-block color-white">Connect Telegram</div>
                        </div>
                    </a>
                </div>
                <div>
                    <label class="switch">
                        <input type="checkbox" checked>
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
            <div>


            </div>



        </div>
    </nav>
    <section>
        <div class="Container-fluid " style="padding: 0px 30px;">
            <div class="d-flex justify-content-around align-items-center average-header" style="padding: 10px 0px; ">
                <div class="text-center">
                    <div class="colorgreen">0.96 %</div>
                    <div class="average-header-subHeading colorwhite">5 Mins</div>
                </div>
                <div class="text-center">
                    <div class="average-header-maintext colorgreen">1.89 %</div>
                    <div class="average-header-subHeading colorwhite">1 Hour</div>
                </div>
                <div style="max-width: 40%;">
                    <div class="text-center font-32 average-block">
                        <div class="average-subText"><span class="subText-heading "
                                style="color: #6b6e7b; font-size: 28px;">Best Price to Trade</span>
                        </div>
                        <div class="average-heading" style="padding-bottom: 10px; font-size: 80px; color: white;">₹
                            24,51,322</div>
                        <div class="average-subText " style="color: #6b6e7b; font-size: 16px;">Average BTC/INR net price
                            including commission</div>
                    </div>
                </div>
                <div class="text-center">
                    <div class="average-header-maintext colorgreen">1.95 %</div>
                    <div class="average-header-subHeading colorwhite">1 Day</div>
                </div>
                <div class="text-center">
                    <div class="average-header-maintext colorgreen">5.32 %</div>
                    <div class="average-header-subHeading colorwhite">7 Days</div>
                </div>
            </div>
        </div>




        <div class="fiat-crypto-table table-responsive" style="margin: 0px auto;">
            <table class="table table-borderless text-center">
                <thead>
                    <tr class="colorwhite">
                        <th>
                            <h4><span class="pointer">#</span></h4>
                        </th>
                        <th>
                            <h4><span class="pointer">Name</span></h4>
                        </th>
                        <th>
                            <h4><span class="pointer">Last Traded Price</span></h4>
                        </th>
                        <th>
                            <h4><span class="pointer">Buy / Sell Price</span></h4>
                        </th>
                        <th>
                            <h4><span class="pointer">Volume</span></h4>
                        </th>
                        <th>
                            <h4><span class="pointer">Base Unit</span></h4>
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <%Data.forEach((item)=>{%>
                        <tr>
                            <td class=" colourpurewhite">
                                <h4 class="">
                                    <%=item.value.no%>
                                </h4>
                            </td>
                            <td class=" colourpurewhite">
                                <h4 class="exchange-name ">
                                    <%=item.value.name%>
                                </h4>
                            </td>
                            <td class=" colourpurewhite">
                                <h4 class="">₹ <%=item.value.last%>
                                </h4>
                            </td>
                            <td class="colourpurewhite">
                                <h4 class=""><span>₹ <%=item.value.sell%> / ₹ <%=item.value.buy%></span></h4>
                            </td>
                            <td class="" style="color: #17a2b8;">
                                <h4 class=" color-red">
                                    <%=item.value.volume%>
                                </h4>
                            </td>
                            <td class="" style="color: red;">
                                <h4 class=" color-red">
                                    <%=item.value.base_unit%>
                                </h4>
                            </td>
                        </tr>
                        <%})%>

                </tbody>
            </table>
        </div>

    </section>
</body>

</html>